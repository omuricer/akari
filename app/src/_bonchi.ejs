<div class="mdc-layout-grid no-margin bonchi">
  <div class="mdc-layout-grid__inner content">
    <%
      shops = [
        {
          image: 'image/bonchi/shop1.png',
          position: {x: 10, y: 10},
        },
        {
          image: 'image/bonchi/shop1.png',
          position: {x: 170, y: 90},
        },
        {
          image: 'image/bonchi/shop1.png',
          position: {x: 50, y: 100},
        },
      ];
      generateRondomDelay = () => {
        return roundAtDigit(Math.random() * 6, 2)
      };
      roundAtDigit = (num, digit) => {
        // num = 1.2345 & digit = 2 --> 1.23 
        return Math.floor( num * Math.pow( 10, digit ) ) / Math.pow( 10, digit ) ;
      };
    %>
    <%
      shops.forEach(shop => {
        shop.delay = generateRondomDelay();
    %>
      <%- include('components/shop', shop) %>
    <% }); %>
  </div>
</div>
